	note = {Number: 12
Publisher: Multidisciplinary Digital Publishing Institute},
	keywords = {LCOE, WEC, Wavestar, probabilistic reliability analysis, reliability level, reliability-basedoptimization, wave energy},
	pages = {8178--8200},
}

