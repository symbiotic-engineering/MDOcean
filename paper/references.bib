	journal = {Renewable and Sustainable Energy Reviews},
	author = {Galparsoro, I. and Korta, M. and Subirana, I. and Borja, Á. and Menchaca, I. and Solaun, O. and Muxika, I. and Iglesias, G. and Bald, J.},
