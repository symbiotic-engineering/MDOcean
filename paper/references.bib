	number = {4},
	urldate = {2024-12-22},
	journal = {Energies},
	author = {Ferri, Francesco and Ambühl, Simon and Fischer, Boris and Kofoed, Jens Peter},
	month = apr,
	year = {2014},
	note = {Number: 4
Publisher: Multidisciplinary Digital Publishing Institute},
	keywords = {active control, fatigue analysis, model predictive control (MPC), passive control, wave energy converter (WEC), wavestar},
